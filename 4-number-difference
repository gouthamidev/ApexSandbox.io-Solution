public Integer diff(Integer a, Integer b) {        
        Integer checka = a;
        Integer absnumbera = math.abs(a);
        Integer checkb = b;
        Integer absnumberb = math.abs(b);
        Integer result1 =0;
        if(absnumbera > absnumberb )
            result1 = absnumbera - absnumberb;
        else 
            result1 = absnumberb -  absnumbera;

return result1;
}
